{% extends 'base.html.twig' %}

{% block title %}PHOTOBOOK - Shooting{% endblock %}

{% block body %}

<section class="add-edit-shooting">
    {% if edit %}
        <h1>Edit a Shooting</h1>
    {% else %}
        <h1>Add a Shooting</h1>
    {% endif %}

    {{ form_start(formAddShooting) }}
        {{ form_row(formAddShooting.title) }}
        {{ form_row(formAddShooting.description) }}
        {{ form_row(formAddShooting.price) }}
        {{ form_row(formAddShooting.isActive) }}
    {{ form_end(formAddShooting) }}

    <div class="shooting-images">
        {% for img in shooting.shootingImages %}
        <div class="shooting-image-item">
            <img src="{{ asset('uploads/images/' ~ img.url) }}" alt="">
        </div>
        {% endfor %}
    </div>
</section>

{% endblock %}